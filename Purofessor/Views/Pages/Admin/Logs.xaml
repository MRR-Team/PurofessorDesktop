<Page x:Class="Purofessor.Views.Pages.Admin.Logs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Logs">

    <Grid>
        <Border Style="{StaticResource MainBorderStyle}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="{DynamicResource AdminLogsTitle}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />

                <DataGrid Name="LogsDataGrid"
                          IsReadOnly="True"
                          Grid.Row="1"
                          AutoGenerateColumns="false"
                          ColumnWidth="*"  
                          Background="{DynamicResource BackgroundBrush}"
                          Foreground="{DynamicResource ForegroundBrush}"
                          BorderBrush="{StaticResource PrimaryBrush}"
                          BorderThickness="1"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowBackground="{DynamicResource BackgroundBrush}"
                          FontSize="14"
                          FontWeight="SemiBold"
                          RowHeight="35"
                          ColumnHeaderHeight="30"
                          ColumnHeaderStyle="{StaticResource AdminDataGridColumnHeaderStyle}"
                          RowStyle="{StaticResource AdminDataGridRowStyle}"
                          ScrollViewer.VerticalScrollBarVisibility="Visible"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Margin="0,0,0,10">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="35" />
                        <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="*" />
                        <DataGridTextColumn Header="Causer ID" Binding="{Binding CauserIdDisplay}" Width="100" />
                        <DataGridTextColumn Header="Utworzono" Binding="{Binding CreatedAtDisplay}" Width="150" />

                    </DataGrid.Columns>

                </DataGrid>

            </Grid>
        </Border>
    </Grid>
</Page>
