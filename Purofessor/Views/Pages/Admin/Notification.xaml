<Page x:Class="Purofessor.Views.Pages.Admin.Notification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Notification">

    <Grid>
        <Border Style="{DynamicResource MainBorderStyle}">
            <StackPanel Style="{DynamicResource ContentStackPanelStyle}" Margin="20">

                <TextBlock Text="Tytuł" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}" />
                <TextBox x:Name="TitleTextBox"
                         Margin="0,5,0,10"
                         Height="30"
                         Background="{DynamicResource BackgroundBrush}"
                         Foreground="{DynamicResource ForegroundBrush}"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Treść" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}" />
                <TextBox x:Name="BodyTextBox"
                         AcceptsReturn="True"
                         Height="100"
                         TextWrapping="Wrap"
                         Margin="0,5,0,10"
                         Background="{DynamicResource BackgroundBrush}"
                         Foreground="{DynamicResource ForegroundBrush}"/>

                <TextBlock Text="Typ powiadomienia" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10" />
                <ComboBox x:Name="TypeComboBox" HorizontalAlignment="Left"
          Style="{StaticResource AdminComboBoxStyle}">
                    <ComboBoxItem Content="Patch" />
                    <ComboBoxItem Content="Rotation" />
                    <ComboBoxItem Content="Different" />
                </ComboBox>

                <Button Content="Wyślij powiadomienie"
                        Height="35"
                        Background="{DynamicResource GradientStartBrush}"
                        Foreground="{DynamicResource ForegroundBrush}"
                        FontWeight="Bold"
                        Click="SendNotification_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
