<Page x:Class="Purofessor.Views.Counterpick"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Purofessor.Views"
      xmlns:compoments="clr-namespace:Purofessor.components"
      mc:Ignorable="d"
      d:DesignHeight="350"
      d:DesignWidth="500"
      Title="Counterpick">

    <Grid>
        <Border Style="{StaticResource MainBorderStyle}">
            <StackPanel Style="{StaticResource ContentStackPanelStyle}">

                <TextBlock Text="{DynamicResource ChooseChamp}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="{DynamicResource ChampionName}"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundBrush}"/>

                <Grid>
                    <!-- Upewniamy się, że nazwa to 'EnemyChampTextBox' -->
                    <TextBox Name="EnemyChampTextBox"
                             Height="30"
                             Margin="0,5,0,5"
                             Background="{DynamicResource BackgroundBrush}"
                             Foreground="{DynamicResource ForegroundBrush}"
                             VerticalContentAlignment="Center"/>

                    <!-- Naprawiony PlacementTarget i MinWidth -->
                    <Popup Name="SuggestionsPopup"
                           PlacementTarget="{Binding ElementName=EnemyChampTextBox}"
                           Placement="Bottom"
                           StaysOpen="False">
                        <Border Background="{DynamicResource BackgroundBrush}"
                                BorderThickness="1"
                                BorderBrush="Gray"
                                CornerRadius="4"
                                MaxHeight="150">
                            <ListBox Name="SuggestionsListBox"
                                     Background="{DynamicResource BackgroundBrush}"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     BorderThickness="0"
                                     MinWidth="{Binding ActualWidth, ElementName=EnemyChampTextBox}"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                        </Border>
                    </Popup>
                </Grid>

                <TextBlock Text="{DynamicResource ChoosePos}"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           Margin="0,10,0,5"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15"
                            Name="PositionStackPanel">
                    <RadioButton Content="{DynamicResource Supp}" GroupName="Pozycje" Style="{StaticResource ButtonRadioStyle}" Name="RadioSupp"/>
                    <RadioButton Content="{DynamicResource Bottom}" GroupName="Pozycje" Style="{StaticResource ButtonRadioStyle}" Name="RadioBottom"/>
                    <RadioButton Content="{DynamicResource Mid}" GroupName="Pozycje" Style="{StaticResource ButtonRadioStyle}" Name="RadioMid"/>
                    <RadioButton Content="{DynamicResource Jungle}" GroupName="Pozycje" Style="{StaticResource ButtonRadioStyle}" Name="RadioJungle"/>
                    <RadioButton Content="{DynamicResource Top}" GroupName="Pozycje" Style="{StaticResource ButtonRadioStyle}" Name="RadioTop"/>
                </StackPanel>

                <Button Content="{DynamicResource GenCounter}"
                        Height="35"
                        Background="{DynamicResource GradientStartBrush}"
                        Foreground="{DynamicResource ForegroundBrush}"
                        FontWeight="Bold"
                        Click="OnGenerateCounterClick"/>

                <Border Name="ResultBorder"
                        Margin="0,15,0,0"
                        Padding="10"
                        CornerRadius="5"
                        Background="{DynamicResource BackgroundBrush}"
                        MinHeight="40"
                        HorizontalAlignment="Stretch"
                        Visibility="Collapsed">
                    <TextBlock Name="ResultTextBlock"
                               Text=""
                               TextAlignment="Left"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
