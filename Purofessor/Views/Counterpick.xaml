<Page x:Class="Purofessor.Views.Counterpick"
      
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Purofessor.Views"
      xmlns:components="clr-namespace:Purofessor.components"
      mc:Ignorable="d" 
      Background="Gray"
      d:DesignHeight="350" d:DesignWidth="500"
        Title="Counterpick">
      

      



    <Grid>

        <components:TopPanel HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{DynamicResource ChooseChamp}" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"><Run Language="pl-pl"/></TextBlock>
            <Grid Margin="0,0,0,10">
                <TextBox Name="MyTextBox" Width="200" Height="30" TextChanged="MyTextBox_TextChanged" VerticalContentAlignment="Center"/>
                <TextBlock Text="{DynamicResource InsertChamp}" Foreground="Gray" 
                   VerticalAlignment="Center" Margin="5,0,0,0"
                   IsHitTestVisible="False" Visibility="Collapsed"/>
            </Grid>
            <TextBlock Text="{DynamicResource ChoosePos}" FontSize="20" FontWeight="Bold" TextAlignment="Center"><Run Language="pl-pl"/></TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <RadioButton Content="{DynamicResource Supp}" GroupName="Pozycje" Margin="5"/>
                <RadioButton Content="{DynamicResource Bottom}" GroupName="Pozycje" Margin="5"/>
                <RadioButton Content="{DynamicResource Mid}" GroupName="Pozycje" Margin="5"/>
                <RadioButton Content="{DynamicResource Jungle}" GroupName="Pozycje" Margin="5"/>
                <RadioButton Content="{DynamicResource Top}" GroupName="Pozycje" Margin="5"/>
            </StackPanel>
            <Button Content="{DynamicResource GenCounter}" Width="150" Height="40" Click="Button_Click"/>

        </StackPanel>

    </Grid>
</Page>
