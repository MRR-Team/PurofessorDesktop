<Window x:Class="Purofessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:Purofessor.components"
        Title="Purofessor"
        Height="650" Width="800"
        MinWidth="800" MinHeight="650"
        Background="{DynamicResource MainBackgroundGradient}"
        >
    <Window.Resources>
        <LinearGradientBrush x:Key="MainBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{DynamicResource WindowGradientStartColor}" Offset="0" />
            <GradientStop Color="{DynamicResource WindowGradientStartColor}" Offset="1" />
        </LinearGradientBrush>
    </Window.Resources>


    <Grid>
        <components:TopPanel HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

        <components:ToastContainer x:Name="ToastOverlay"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"
                                   Margin="16"
                                   IsHitTestVisible="False"
                                   Panel.ZIndex="99" />
    </Grid>
</Window>
