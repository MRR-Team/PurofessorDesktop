<Page x:Class="Purofessor.Views.BuildMaker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Purofessor.Views"
      Title="BuildMaker"
            Width="Auto"
      HorizontalAlignment="Stretch"
      >

    <Grid>
        <Border Style="{StaticResource MainBorderStyle}">

            <StackPanel Style="{StaticResource ContentStackPanelStyle}">
                <TextBlock Text="Wpisz twojego championa i przeciwnika"
                           FontSize="24" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}"
                           TextAlignment="Center" Margin="0,0,0,20"/>

                <!-- Twój champion -->
                <TextBlock Text="Twój champion:" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}"/>
                <Grid>
                    <TextBox x:Name="MyChampionTextBox" Height="30" Margin="0,5,0,5"
             Background="{DynamicResource BackgroundBrush}"
             Foreground="{DynamicResource ForegroundBrush}"
             VerticalContentAlignment="Center"/>
                    <Popup Name="MyChampPopup" PlacementTarget="{Binding ElementName=MyChampionTextBox}" Placement="Bottom" StaysOpen="False">
                        <Border Background="{DynamicResource BackgroundBrush}" BorderThickness="1" BorderBrush="Gray" CornerRadius="4" MaxHeight="150">
                            <ListBox Name="MyChampSuggestions" Background="{DynamicResource BackgroundBrush}" 
                     Foreground="{DynamicResource ForegroundBrush}"
                     BorderThickness="0"
                     MinWidth="{Binding ActualWidth, ElementName=MyChampionTextBox}"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                        </Border>
                    </Popup>
                </Grid>

                <!-- Przeciwnik -->
                <TextBlock Text="Przeciwnik:" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}"/>
                <Grid>
                    <TextBox x:Name="EnemyChampionTextBox" Height="30" Margin="0,5,0,5"
             Background="{DynamicResource BackgroundBrush}"
             Foreground="{DynamicResource ForegroundBrush}"
             VerticalContentAlignment="Center"/>
                    <Popup Name="EnemyChampPopup" PlacementTarget="{Binding ElementName=EnemyChampionTextBox}" Placement="Bottom" StaysOpen="False">
                        <Border Background="{DynamicResource BackgroundBrush}" BorderThickness="1" BorderBrush="Gray" CornerRadius="4" MaxHeight="150">
                            <ListBox Name="EnemyChampSuggestions" Background="{DynamicResource BackgroundBrush}"
                     Foreground="{DynamicResource ForegroundBrush}"
                     BorderThickness="0"
                     MinWidth="{Binding ActualWidth, ElementName=EnemyChampionTextBox}"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                        </Border>
                    </Popup>
                </Grid>

                <!-- Przycisk -->
                <Button Content="Generuj build"
                        Height="35"
                        Background="{DynamicResource GradientStartBrush}"
                        Foreground="{DynamicResource ForegroundBrush}"
                        FontWeight="Bold"
                        Click="GenerateBuild_Click"/>

                <!-- Wynik -->
                <Border x:Name="ResultBorder" Margin="0,15,0,0" Padding="10"
                        CornerRadius="5" Background="{DynamicResource BackgroundBrush}"
                        MinHeight="40" HorizontalAlignment="Stretch" Visibility="Collapsed">
                    <TextBlock x:Name="ResultTextBlock"
                               Text=""
                               TextAlignment="Left"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
