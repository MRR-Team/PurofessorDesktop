<Page x:Class="Purofessor.Views.BuildMaker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Purofessor.Views"
      Title="BuildMaker"
            Width="Auto"
      HorizontalAlignment="Stretch"
      >

    <Grid>
        <Border CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{DynamicResource GradientStartColor}" Offset="0"/>
                    <GradientStop Color="{DynamicResource GradientEndColor}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel Width="475">
                <TextBlock Text="Wpisz twojego championa i przeciwnika"
                           FontSize="24" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}"
                           TextAlignment="Center" Margin="0,0,0,20"/>

                <!-- Nasz champion -->
                <TextBlock Text="Twój champion:" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}"/>
                <TextBox x:Name="MyChampionTextBox" Height="30" Margin="0,5,0,15"
                         Background="{DynamicResource BackgroundBrush}"
                         Foreground="{DynamicResource ForegroundBrush}"
                         VerticalContentAlignment="Center"/>

                <!-- Przeciwnik -->
                <TextBlock Text="Przeciwnik:" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundBrush}"/>
                <TextBox x:Name="EnemyChampionTextBox" Height="30" Margin="0,5,0,15"
                         Background="{DynamicResource BackgroundBrush}"
                         Foreground="{DynamicResource ForegroundBrush}"
                         VerticalContentAlignment="Center"/>

                <!-- Przycisk -->
                <Button Content="Generuj build"
                        Height="35"
                        Background="{DynamicResource GradientStartBrush}"
                        Foreground="{DynamicResource ForegroundBrush}"
                        FontWeight="Bold"
                        Click="GenerateBuild_Click"/>

                <!-- Wynik -->
                <Border x:Name="ResultBorder" Margin="0,15,0,0" Padding="10"
                        CornerRadius="5" Background="{DynamicResource BackgroundBrush}"
                        MinHeight="40" HorizontalAlignment="Stretch" Visibility="Collapsed">
                    <TextBlock x:Name="ResultTextBlock"
                               Text=""
                               TextAlignment="Left"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
