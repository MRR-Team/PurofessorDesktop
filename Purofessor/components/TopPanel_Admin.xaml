<UserControl x:Class="Purofessor.components.TopPanel_Admin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Purofessor.components"
             Height="Auto" MinHeight="60">
    <Grid>
        <!-- Tło -->
        <Rectangle VerticalAlignment="Center" Height="60">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="{DynamicResource GradientStartColor}" Offset="0"/>
                    <GradientStop Color="{DynamicResource GradientEndColor}" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid Margin="10,15,10,0" VerticalAlignment="Top" Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Przyciski admina -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
                <Button Style="{DynamicResource TopPanelButtonStyle}" Content="Rotacja" Click="Rotation_Click"/>
                <Button Style="{DynamicResource TopPanelButtonStyle}" Content="Statystyki" Click="Stats_Click"/>
                <Button Style="{DynamicResource TopPanelButtonStyle}" Content="Użytkownicy" Click="Users_Click"/>
                <Button Style="{DynamicResource TopPanelButtonStyle}" Content="Powiadomienia" Click="Notify_Click"/>
            </StackPanel>

            <!-- Wyjdź -->
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button x:Name="ExitButton"
                        Width="30" Height="30" Margin="10,0,0,0"
                        BorderThickness="0"
                        Background="{DynamicResource GradientStartBrush}"
                        ToolTip="Wyjdź"
                        Click="ExitButton_Click">
                    <TextBlock Text="⎋" FontSize="16" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
