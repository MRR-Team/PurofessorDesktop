<UserControl x:Class="Purofessor.components.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="300" Margin="8">
    <Border Background="#FF323232" CornerRadius="8" Padding="12" >
        <StackPanel>
            <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="{Binding Message}" Foreground="White" TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</UserControl>
