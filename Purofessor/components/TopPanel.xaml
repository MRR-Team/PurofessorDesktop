<UserControl x:Class="Purofessor.components.TopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pc="clr-namespace:Purofessor.components.PanelComponents"
             Height="auto"
             MinHeight="60">
    <UserControl.Resources>
        <Style x:Key="TopPanelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="BorderBrush" Value="#4B0082"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A0D26"/>
                    <Setter Property="BorderBrush" Value="#9370DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Rectangle VerticalAlignment="Center" Height="60">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#7A5DC2" Offset="0"/>
                    <GradientStop Color="#4B0082" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Grid Margin="10,15,10,0" VerticalAlignment="Top" Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Zakładki -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center">
<Button Style="{StaticResource TopPanelButtonStyle}"
        Content="{DynamicResource CounterButton}"
        x:Name="KontraButton"
        Click="Kontra_Click"/>

<Button Style="{StaticResource TopPanelButtonStyle}"
        Content="{DynamicResource ServerStatusButton}"
        x:Name="StatusButton"
        Click="Status_Click"/>
            </StackPanel>

            <!-- Przyciski językowe -->
            <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0">
                <pc:LangSelector VerticalAlignment="Center" Margin="0,0,5,0"/>
                
                <TextBlock Text="{DynamicResource ProfileButtonHi}" Height="22"
        Padding="0,4,0,0"
Background="Transparent"
Foreground="White"
FontWeight="Bold"
HorizontalAlignment="Right"
VerticalAlignment="Center"/>

                <TextBlock x:Name="ProfileUsername"
        Height="22"
        Padding="0,4,0,0"
                           
        Background="Transparent"
        Foreground="White"
        FontWeight="Bold"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        IsHitTestVisible="False" />
                <pc:LogoutButton VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
