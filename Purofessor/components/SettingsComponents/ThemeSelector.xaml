<UserControl x:Class="Purofessor.components.SettingsComponents.ThemeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid>
        <ComboBox Style="{StaticResource AdminComboBoxStyle}"
                  x:Name="ThemeComboBox"
                  SelectionChanged="ThemeComboBox_SelectionChanged">
            <ComboBoxItem Content="{DynamicResource DarkTheme}" Tag="DarkTheme.xaml"/>
            <ComboBoxItem Content="{DynamicResource LightTheme}" Tag="LightTheme.xaml"/>
        </ComboBox>
    </Grid>
</UserControl>
