<UserControl x:Class="Purofessor.components.PanelComponents.ThemeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid>
        <ComboBox x:Name="ThemeComboBox"
                  Width="120"
                  Height="26"
                  Padding="10,2"
                  FontWeight="Bold"
                  FontSize="13"
                  Background="White"
                  Foreground="Black"
                  BorderBrush="#9370DB"
                  BorderThickness="1"
                  SelectionChanged="ThemeComboBox_SelectionChanged">
            <ComboBoxItem Content="Dark" Tag="DarkTheme.xaml"/>
            <ComboBoxItem Content="Light" Tag="LightTheme.xaml"/>
        </ComboBox>
    </Grid>
</UserControl>
