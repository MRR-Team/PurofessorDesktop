<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Purofessor" Height="350" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Witaj w aplikacji Purofessor!" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>

            <Button Content="Kliknij mnie" Width="150" Height="40" Click="Button_Click" Margin="0,0,0,10"/>

            <!-- Zamiast PlaceholderText stosujemy "hint" w postaci TextBlock -->
            <Grid Margin="0,0,0,10">
                <TextBox Name="MyTextBox" Width="200" Height="30"/>
                <TextBlock Text="Wpisz coś tutaj..." Foreground="Gray" 
                           VerticalAlignment="Center" Margin="5,0,0,0"
                           IsHitTestVisible="False" Visibility="Collapsed"/>
            </Grid>

            <CheckBox Content="Zaznacz mnie" Margin="0,0,0,10"/>

            <ComboBox Width="150" Margin="0,0,0,10">
                <ComboBoxItem Content="Opcja 1"/>
                <ComboBoxItem Content="Opcja 2"/>
                <ComboBoxItem Content="Opcja 3"/>
            </ComboBox>

            <Slider Width="200" Minimum="0" Maximum="100" Margin="0,0,0,10"/>

            <ProgressBar Width="200" Height="20" Value="50" Margin="0,0,0,10"/>

        </StackPanel>
    </Grid>
</Window>
